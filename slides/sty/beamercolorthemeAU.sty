\mode<presentation>

\definecolor{titleCol}{RGB}{255,255,255}
\DeclareOptionBeamer{light}{\definecolor{titleCol}{RGB}{0,0,0}}
\ProcessOptionsBeamer

% make covered text translucent
\setbeamercovered{transparent}  % dynamic invisible transparent

\hypersetup{colorlinks=true,
    linkcolor=cRed,    % normal internal links
    anchorcolor=cRed,       % anchor text
    citecolor=cRed,    % bibliographical citations in text
    filecolor=cRed,    %  URLs which open local files
    menucolor=cRed,         % Acrobat menu items
    runcolor=cRed,     % run links (launch annotations)
    urlcolor=cRed      % linked URLs
}

%https://tex.stackexchange.com/questions/50747/options-for-appearance-of-links-in-hyperref
%\hypersetup{colorlinks,allcolors=cRed}

\setbeamercolor*{title page header}{fg=titleCol}
\setbeamercolor*{subtitle page header}{fg=titleCol}
\setbeamercolor*{author}{fg=titleCol}
\setbeamercolor*{institute}{fg=titleCol}
\setbeamercolor*{date}{fg=titleCol}
\setbeamercolor*{highlight title}{fg=titleCol}

\setbeamercolor*{frametitle}{fg=black}
\setbeamercolor{title in head/foot}{fg=white}
\setbeamercolor{author in head/foot}{fg=white}
\setbeamercolor{date in head/foot}{fg=white}
\setbeamercolor{number in head/foot}{fg=white}

\setbeamercolor{section in toc}{fg=fgDarkRed}   % doesn't work, apparently because of hyperref
\setbeamercolor{subsection in toc}{fg=black}

\setbeamercolor{item}{fg=cRed}
\setbeamercolor{subitem}{fg=fgYellow}
\setbeamercolor{subsubitem}{fg=fgLightYellow}
\setbeamercolor{item projected}{bg=cRed}
\setbeamercolor{subitem projected}{bg=fgYellow}
\setbeamercolor{subsubitem projected}{bg=fgLightYellow}

\setbeamercolor{caption name}{fg=cRed}
\setbeamercolor{footnote mark}{fg=cRed}
\setbeamercolor{alerted text}{fg=cRed}
\setbeamercolor{qed symbol}{fg=cRed}
\setbeamercolor{bibliography entry author}{fg=cRed}
\setbeamercolor{bibliography entry title}{fg=fgYellow}
\setbeamercolor{bibliography entry location}{fg=fgDarkRed}
\setbeamercolor{bibliography entry note}{fg=black}

\setbeamercolor{block title}{bg=cRed, fg=white}
\setbeamercolor{block body}{bg=black!10}
\setbeamercolor{block title alerted}{bg=fgDeepRed, fg=white}
\setbeamercolor{block body alerted}{bg=fgDeepRed!20}
\setbeamercolor{block title example}{bg=fgYellow, fg=white}
\setbeamercolor{block body example}{bg=black!10}

\mode
<all>
